<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>
    Argon Dashboard - Free Dashboard for Bootstrap 4 by Creative Tim
  </title>
  <!-- Favicon -->
  <link href="../assets/img/brand/favicon.png" rel="icon" type="image/png">
  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
  <!-- Icons -->
  <link href="../assets/js/plugins/nucleo/css/nucleo.css" rel="stylesheet" />
  <link href="../assets/js/plugins/@fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet" />
  <!-- CSS Files -->
  <link href="../assets/css/argon-dashboard.css?v=1.1.2" rel="stylesheet" />
  <link href="/bootstrap/css/bootstrap.min.css">
  <link href="/custom.css" rel="stylesheet">
</head>

<body class="body">
 
 
  <nav class="navbar navbar-vertical fixed-left navbar-expand-md navbar-light bg-white" id="sidenav-main">
    <div class="container-fluid">
      <!-- Toggler -->
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#sidenav-collapse-main" aria-controls="sidenav-main" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    
      <!-- Collapse -->
      <div class="collapse navbar-collapse" id="sidenav-collapse-main">
        <!-- Collapse header -->
     
        <!-- Form -->
        <form class="mt-4 mb-3 d-md-none">
          <div class="input-group input-group-rounded input-group-merge">
            <input type="search" class="form-control form-control-rounded form-control-prepended" placeholder="Search" aria-label="Search">
            <div class="input-group-prepend">
              <div class="input-group-text">
                <span class="fa fa-search"></span>
              </div>
            </div>
          </div>
        </form>
        <!-- Navigation -->
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link " href="/dashboardview/dashboard">
              <i class="ni ni-tv-2 text-primary"></i> Dashboard
            </a>
          </li>
        
          <li class="nav-item">
            <a class="nav-link" href="/dashboardview/addtour">
              <i class="ni ni-planet text-blue"></i> Add a tour
            </a>
          </li>
         
          <li class="nav-item">
            <a class="nav-link active" href="/dashboardview/tours">
              <i class="ni ni-ui-04 text-yellow"></i>   Manage Tours
            </a>
          </li>
          <!-- Button trigger modal -->



          <li class="nav-item">
            <a class="nav-link" href="/dashboardview/users">
              <i class="ni ni-single-02 text-red"></i> Manage Users
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/dashboardview/bookings">
              <i class="ni ni-book-bookmark text-grey"></i> Manage Bookings
            </a>
          </li>
          <li class="nav-item">
            <a onclick="deleteCookie()" id="sbutton" class="nav-link">
              <i class="ni ni-key-25 text-info"></i> Logout
            </a>
          </li>
        </ul>
        <!-- Divider -->
      
      </div>
    </div>
  </nav>
  <div class="main-content">
    <!-- Navbar -->
    <nav class="navbar navbar-top navbar-expand-md navbar-dark" id="navbar-main">
      <div class="container-fluid">
        <!-- Brand -->
      
        <!-- User -->
        <ul class="navbar-nav align-items-center d-none d-md-flex">
         
        </ul>
      </div>
    </nav>
    <!-- End Navbar -->
    <!-- Header -->
    <div class="header bg-gradient-primary pb-8 pt-md-1">
      <div class="container-fluid">
        <div class="header-body">
          <!-- Card stats -->
         
        </div>
      </div>
    </div>
    <div class="container-fluid mt--7">
      <!-- Table -->
    
      <!-- Dark table -->
      <div class="row mt-5">
        <div class="col">
          <div class="card bg-default shadow">
            <div class="card-header bg-transparent border-0">
              <h3 class="text-white mb-0">Manage Tours</h3>
            </div>
            <div class="table-responsive">
              <table class="table align-items-center table-dark table-flush">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col">Tour title</th>
                    <th scope="col">Start Date</th>
                    <th scope="col">Ratings</th>
                    <th scope="col">Price</th>
                    <th scope="col">City</th>
                    <th scope="col">Discount</th>
                  </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i<tours.length; i++){ %>  
              
                  <tr>
                    <th scope="row">
                      <div class="media align-items-center">
                      
                       <%= tours[i].name %>
                      
                        <div class="media-body">
                          <span class="mb-0 text-sm"></span>
                        </div>
                      </div>
                    </th>
                    <td>
                      <%=
                      moment(tours[i].startdate).format('MMMM Do YYYY, h:mm:ss a')
                      %>
                    </td>
                    <td>
                      <%= tours[i].ratingAverage %>
                    </td>
                    <td>
                      <%= tours[i].price %>
                    </td>
                    <td>
                      <%= tours[i].city %>
                      
                    </td>
                    <td>
                      <%= tours[i].off %>
                      
                    </td>
                    <td class="text-right">
                      <div class="dropdown">
                        <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          <i class="fas fa-ellipsis-v"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                          <a class="dropdown-item" href="/dashboardview/gettour/<%= tours[i]._id %>">Edit</a>
                          <a class="dropdown-item" onclick="deletetour('<%=tours[i].id %>')">Delete</a>
                        
                        </div>
                      </div>
                    </td>
                  </tr>
                <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <!-- Footer -->
     
    </div>
  </div>
  <!--   Core   -->
  <script src="../assets/js/plugins/jquery/dist/jquery.min.js"></script>
  <script src="../assets/js/plugins/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <!--   Optional JS   -->
  <!--   Argon JS   -->
  <script src="../assets/js/argon-dashboard.min.js?v=1.1.2"></script>
  <script src="https://cdn.trackjs.com/agent/v3/latest/t.js"></script>
  <script>
    window.TrackJS &&
      TrackJS.install({
        token: "ee6fab19c5a04ac1a32a645abde4613a",
        application: "argon-dashboard-free"
      });
  </script>

 
  <script src="/axios.js"></script>
  <script src="/edittour.js"></script>
  <script src="/logout.js"></script>
</body>

</html>