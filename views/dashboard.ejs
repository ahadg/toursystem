    <!-- Header -->
    <div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
      <div class="container-fluid">
        <div class="header-body">
          <!-- Card stats -->
          <div class="row">
           
            <div class="col-xl-3 col-lg-6">
              <div class="card card-stats mb-4 mb-xl-0">
                <div class="card-body">
                  <div class="row">
                    <div class="col">
                      <h5 class="card-title text-uppercase text-muted mb-0">Total Tours</h5>
                      <span class="h2 font-weight-bold mb-0"><%= tour[0].totaltours %></span>
                    </div>
                    <div class="col-auto">
                      <div class="icon icon-shape bg-warning text-white rounded-circle shadow">
                        <i class="fas fa-chart-pie"></i>
                      </div>
                    </div>
                  </div>
                 
                </div>
              </div>
            </div>
            <div class="col-xl-3 col-lg-6">
              <div class="card card-stats mb-4 mb-xl-0">
                <div class="card-body">
                  <div class="row">
                    <div class="col">
                      <h5 class="card-title text-uppercase text-muted mb-0">Total Users</h5>
                      <span class="h2 font-weight-bold mb-0"><%= user[0].totalusers %></span>
                    </div>
                    <div class="col-auto">
                      <div class="icon icon-shape bg-yellow text-white rounded-circle shadow">
                        <i class="fas fa-users"></i>
                      </div>
                    </div>
                  </div>
                 
                </div>
              </div>
            </div>
            <div class="col-xl-3 col-lg-6">
              <div class="card card-stats mb-4 mb-xl-0">
                <div class="card-body">
                  <div class="row">
                    <div class="col">
                      <h5 class="card-title text-uppercase text-muted mb-0">Average Rating</h5>
                      <span class="h2 font-weight-bold mb-0"><%=
                        parseFloat(tour[0].avgrating).toFixed(2)
                        %></span>
                    </div>
                    <div class="col-auto">
                      <div class="icon icon-shape bg-info text-white rounded-circle shadow">
                        <i class="fas fa-percent"></i>
                      </div>
                    </div>
                  </div>
                 
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container-fluid mt--10" style="margin-top: 12px;">
    <div class="row">
      <!-- Column -->
      <div class="col-lg-12">
          <div class="card shadow">
              <div class="card-body">
                  <div class="d-flex">
                      <div>
                          <h5 class="card-title">New users</h5>
                      </div>
                     
                  </div>
                  <div class="table-responsive m-t-20 no-wrap">
                      <table class="table vm no-th-brd pro-of-month">
                          <thead>
                              <tr>
                                  <th colspan="2">Name</th>
                                  <th>Email</th>
                                  <th>Phone Number</th>
                                  <th>Country</th>
                              </tr>
                          </thead>
                          <tbody>
                            <% 
                            var i;
                            for(i=0;i<todayuser.length; i++) { %>
                              <tr class="active">
                                  <td><span class="round round-success"><img src="/uploads/<%= todayuser[i].photo %>" alt="user" width="50"></span></td>
                                  <td>
                                      <h4><%= todayuser[i].name%></h4></td>
                                  <td><%= todayuser[i].email %></td>
                                  <td><%= todayuser[i].mobile %></td>
                                  <td><%= todayuser[i].country %></td>
                              </tr>
                              <% } %>
                          </tbody>
                      </table>
                  </div>
              </div>
          </div>
      </div>
      </div>
      <!-- Column -->
      <!-- Column -->
      

    </br>
    <div class="row mt-5">
      <div class="col">
        <div class="card bg-default shadow">
          <div class="card-header bg-transparent border-0">
            <h3 class="text-white mb-0">Message from users</h3>
          </div>
          <div class="table-responsive">
            <table class="table align-items-center table-dark table-flush">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Name</th>
                  <th scope="col">Email</th>
                  <th scope="col">Date</th>
                  <th scope="col">Message</th>
                

                 
                </tr>
              </thead>
              <tbody>
                <% for(var i=0; i<messages.length; i++){ %>  
            
                <tr>
                  <td>
                     <%= messages[i].username %>
                  </td>
                  
                  <td>
                    <%= messages[i].email %>
                  </td>
                  <td>
                    <%= moment(messages[i].date).format('MMMM Do YYYY, h:mm:ss a') %>
                  </td>
                  <td>
                    <%= messages[i].message%>
                  </td>
               
                 
                </tr>
              <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
